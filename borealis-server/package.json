{
  "name": "borealis-server",
  "version": "1.0.0",
  "description": "Websockets application for Tabletop Maps Interactive",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "daemon": ">/dev/null nohup node srvbuild/index.js &",
    "kill": "kill $(cat pid.tmp) && rm pid.tmp",
    "start": "cross-env NODE_ENV=production node srvbuild/index.js",
    "dev": "cross-env NODE_ENV=development nodemon -e ts --watch . .env --exec \"tsc --incremental && node srvbuild/index.js\"",
    "lint": "eslint --ext .ts .",
    "tsc": "tsc",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "Fabio Vitalba",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.28.7",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.5.2",
    "query-string": "^7.1.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  }
}
